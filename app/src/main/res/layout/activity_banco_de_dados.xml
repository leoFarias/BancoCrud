<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BancoDeDados">

    <CalendarView
        android:id="@+id/calendar1"
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/txNome"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/calendar1"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="14sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:text="Reservar EspaÃ§o" />

    <TextView
        android:id="@+id/textData"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calendar1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-64dp"
        android:text="Selecione uma Data"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic" />

    <Spinner
        android:id="@+id/spinner01"
        android:layout_width="256dp"
        android:layout_height="86dp"
        android:layout_below="@+id/calendar1"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        android:popupBackground="@android:color/darker_gray"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/calendar1"
        android:layout_centerHorizontal="true"
        android:text="Local"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <CheckBox
        android:id="@+id/checkBoxContrato"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner01"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:duplicateParentState="false"
        android:fontFamily="serif"
        android:text="Aceito o Contrato de uso"
        android:textSize="10sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btoReservar"
        android:layout_width="183dp"
        android:layout_height="60dp"
        android:layout_below="@+id/checkBoxContrato"
        android:layout_centerHorizontal="true"
        android:text="Reservar" />

</RelativeLayout>